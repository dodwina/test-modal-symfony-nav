{#test pages localhost/app_dev.php/_error/{statusCode}#}
{% extends 'base.html.twig' %}
{% block body %}
    {% block main %}

    {% if status_code >= 500 %}
     <div id="cinqcent">
        <div class="container1">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="txt-b ">
                        <h1 class="mb-3">{{'Oops ! Une erreur est survenue'| trans }}</h1>
                        <h2>{{ 'Le serveur a renvoyé'| trans }} "{{ status_code }} {{ status_text }}".</h2>
                        <span>{{'Quelque chose s\'est brisé. Contactez-nous via "contact.dev@upns.fr" et faites-nous savoir ce que vous faisiez lorsque que cette erreur est survenue. Nous allons réparer cela dés que possible. Merci beaucoup.' | trans }}</span>
                        <span class="text-left" style="font-weight: 900;"><a href="{{ path('platform_homepage') }}" class="btn back_btn">
                                <u style= "text-decoration: underline;text-decoration-color: grey;"><i class="fas fa-arrow-left"></i> {{ 'Retourner à la page d\'accueil' | trans }}</u></a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% elseif status_code >= 404 %}
    <div id="quatrecent">
        <div class="container2" >
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="txt-b">
                        <h1 class="mb-3"><span>{{'Page introuvée'| trans }}</span></h1>
                        <span>{{ 'La page demandée n\'a pu être localisée. L\'adresse est fausse ou mal orthographiée.'| trans }}</span>
                        <a href="{{ path('platform_homepage') }}"><u style= "text-decoration: underline;text-decoration-color: grey;"><i class="fas fa-arrow-left"></i> {{ 'Retour à la page d\'acceuil'| trans }}</u> </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% elseif status_code == 403 %}
    <div id="quatrecentrois">
        <div class="container3" >
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="txt-b">
                        <h1 class="mb-3"><span>{{'Accès Interdit'| trans }}</span></h1>
                        <span>{{ 'Vous n\'avez pas la permission d\'accéder à ce serveur.'| trans }}</span>
                        <a href="{{ path('platform_homepage') }}"><u style= "text-decoration: underline;text-decoration-color: grey;"><i class="fas fa-arrow-left"></i> {{ 'Retour à la page d\'acceuil'| trans }}</u> </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% endblock %}
{% endblock %}
